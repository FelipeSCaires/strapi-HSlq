{
  "kind": "collectionType",
  "collectionName": "accounts_receivable",
  "info": {
    "singularName": "account-receivable",
    "pluralName": "accounts-receivable",
    "displayName": "Conta a Receber"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "code": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::persona.persona"
    },
    "description": {
      "type": "string",
      "required": true
    },
    "documentNumber": {
      "type": "string"
    },
    "documentType": {
      "type": "enumeration",
      "enum": ["invoice", "cte", "contract", "other"]
    },
    "issueDate": {
      "type": "date"
    },
    "dueDate": {
      "type": "date",
      "required": true
    },
    "receiptDate": {
      "type": "date"
    },
    "amount": {
      "type": "decimal",
      "required": true
    },
    "receivedAmount": {
      "type": "decimal"
    },
    "discount": {
      "type": "decimal"
    },
    "interest": {
      "type": "decimal"
    },
    "fine": {
      "type": "decimal"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "received", "overdue", "cancelled"],
      "default": "pending"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::financial-category.financial-category"
    },
    "costCenter": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::cost-center.cost-center"
    },
    "bankAccount": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::bank-account.bank-account"
    },
    "trip": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::trip.trip"
    },
    "cargoScheduling": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::cargo-scheduling.cargo-scheduling"
    },
    "attachments": {
      "type": "media",
      "multiple": true
    },
    "notes": {
      "type": "text"
    },
    "metadata": {
      "type": "json"
    }
  }
}
