{
  "kind": "collectionType",
  "collectionName": "departments",
  "info": {
    "singularName": "department",
    "pluralName": "departments",
    "displayName": "Departamento"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "code": {
      "type": "string",
      "unique": true
    },
    "description": {
      "type": "text"
    },
    "manager": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::employee.employee"
    },
    "parent": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::department.department"
    },
    "costCenter": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::cost-center.cost-center"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}
